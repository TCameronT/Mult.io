<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    tools:context=".User_Profile">

    <TextView
        android:id="@+id/txtCareerStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:text="career stats"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textColorLink="@color/colorProfileBorder"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtProblems"
        android:layout_width="112dp"
        android:layout_height="22dp"
        android:text="32"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtCompleteScore"
        app:layout_constraintStart_toStartOf="@+id/txtCompleteScore"
        app:layout_constraintTop_toBottomOf="@+id/txtCompleteScore" />

    <TextView
        android:id="@+id/txtWins"
        android:layout_width="112dp"
        android:layout_height="24dp"
        android:text="25"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtGamesWon"
        app:layout_constraintStart_toStartOf="@+id/txtGamesWon"
        app:layout_constraintTop_toBottomOf="@+id/txtGamesWon" />

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="112dp"
        android:layout_height="22dp"
        android:text="720"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtBestScore"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/txtBestScore"
        app:layout_constraintTop_toBottomOf="@+id/txtBestScore" />

    <TextView
        android:id="@+id/txtBestScore"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="70dp"
        android:text="Best\n Score: "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtCompleteScore"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGamesWon" />

    <TextView
        android:id="@+id/txtGamesWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Games Won: "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCareerStats" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoText="true"
        android:cursorVisible="true"
        android:text="Mathlete"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/txtCareerStats"
        app:layout_constraintEnd_toEndOf="@+id/txtCareerStats"
        app:layout_constraintStart_toStartOf="@+id/txtCareerStats"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtCompleteScore"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Problems\n Completed:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtBestScore"
        app:layout_constraintTop_toTopOf="@+id/txtBestScore" />

    <ImageView
        android:id="@+id/imgToken"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/currency_icon_new" />

    <TextView
        android:id="@+id/txtTokens"
        android:layout_width="43dp"
        android:layout_height="24dp"
        android:layout_marginStart="2dp"
        android:text="1337"
        android:textAlignment="center"
        android:textColor="@color/colorDarkBG"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgToken"
        app:layout_constraintStart_toEndOf="@+id/imgToken"
        app:layout_constraintTop_toTopOf="@+id/imgToken" />

</androidx.constraintlayout.widget.ConstraintLayout>