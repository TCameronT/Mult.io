<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorProfileBorder"
    tools:context=".User_Profile">

    <FrameLayout
        android:id="@+id/frameStatsBackground"
        android:layout_width="417dp"
        android:layout_height="327dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorBG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameProfileBackground" />

    <TextView
        android:id="@+id/txtCareerStats"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:text="career stats"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textColorLink="@color/colorProfileBorder"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frameStatsBackground" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameProfileBackground"
        android:layout_width="413dp"
        android:layout_height="290dp"
        android:background="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/btnSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_settings_black_36" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="112dp"
        android:layout_height="22dp"
        android:text="32s"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtBestTime"
        app:layout_constraintStart_toStartOf="@+id/txtBestTime"
        app:layout_constraintTop_toBottomOf="@+id/txtBestTime" />

    <TextView
        android:id="@+id/txtWins"
        android:layout_width="112dp"
        android:layout_height="24dp"
        android:text="25"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtGamesWon"
        app:layout_constraintStart_toStartOf="@+id/txtGamesWon"
        app:layout_constraintTop_toBottomOf="@+id/txtGamesWon" />

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="112dp"
        android:layout_height="22dp"
        android:text="720"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtBestScore"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/txtBestScore"
        app:layout_constraintTop_toBottomOf="@+id/txtBestScore" />

    <TextView
        android:id="@+id/txtBestScore"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="70dp"
        android:text="Best Score: "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtBestTime"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGamesWon" />

    <TextView
        android:id="@+id/txtGamesWon"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Games Won: "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCareerStats" />

    <ImageView
        android:id="@+id/imgBadge3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgBadge2"
        app:layout_constraintTop_toBottomOf="@+id/frameStatsBackground"
        app:srcCompat="@mipmap/ic_launcher"
        tools:srcCompat="@android:drawable/sym_def_app_icon"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imgBadge1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgBadge2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameStatsBackground"
        app:srcCompat="@mipmap/ic_launcher"
        tools:srcCompat="@android:drawable/sym_def_app_icon"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imgBadge2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgBadge3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgBadge1"
        app:layout_constraintTop_toBottomOf="@+id/frameStatsBackground"
        app:srcCompat="@mipmap/ic_launcher"
        tools:srcCompat="@android:drawable/sym_def_app_icon"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="111dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_account_circle_black_48"
        tools:srcCompat="@drawable/baseline_account_circle_black_48"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="206dp"
        android:layout_height="41dp"
        android:layout_marginTop="4dp"
        android:text="haydenberryc"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="206dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:autoText="true"
        android:cursorVisible="true"
        android:text="Mathlete"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtBestTime"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="8dp"
        android:text="Best Time: "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtBestScore"
        app:layout_constraintTop_toBottomOf="@+id/txtGamesWon" />

    <ImageView
        android:id="@+id/imgToken"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_polymer_black_48"
        tools:srcCompat="@drawable/baseline_polymer_black_48" />

    <TextView
        android:id="@+id/txtTokens"
        android:layout_width="43dp"
        android:layout_height="24dp"
        android:layout_marginStart="2dp"
        android:text="1337"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgToken"
        app:layout_constraintStart_toEndOf="@+id/imgToken"
        app:layout_constraintTop_toTopOf="@+id/imgToken" />

</androidx.constraintlayout.widget.ConstraintLayout>